<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:orientation="vertical"
        android:background="@drawable/bai_hei">

        <TextView
            android:id="@+id/wdlk_lu_kou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:textColor="#000"
            android:text="路口1"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="32sp"
                        android:textColor="#000"
                        android:text="配置信息"
                        android:layout_marginLeft="30dp"/>

                    <TextView
                        android:id="@+id/wdlk_lv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="32sp"
                        android:textColor="#000"
                        android:text="绿灯5秒"
                        android:layout_marginLeft="50dp"/>

                    <TextView
                        android:id="@+id/wdlk_huang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="32sp"
                        android:textColor="#000"
                        android:text="绿灯5秒"
                        android:layout_marginLeft="50dp"/>

                    <TextView
                        android:id="@+id/wdlk_hong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="32sp"
                        android:textColor="#000"
                        android:text="绿灯5秒"
                        android:layout_marginLeft="50dp"/>

                    <Button
                        android:id="@+id/wdlk_pei_zhi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="32sp"
                        android:textColor="#000"
                        android:background="@drawable/bai_hei"
                        android:text="配置"
                        android:layout_marginLeft="110dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/wdlk_heng"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:textSize="32sp"
                        android:textColor="#000"
                        android:text="横向状态      绿灯5秒"
                        android:layout_marginLeft="30dp"/>

                    <TextView
                        android:id="@+id/wdlk_zhong"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:textSize="32sp"
                        android:textColor="#000"
                        android:text="横向状态      绿灯5秒"
                        android:layout_marginLeft="110dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/wdlk_heng_time"
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/hongdeng"
                        android:textSize="32sp"
                        android:textColor="#000"
                        android:gravity="center"/>


                    <TextView
                        android:id="@+id/wdlk_zhong_time"
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="160dp"
                        android:background="@drawable/hongdeng"
                        android:textSize="32sp"
                        android:textColor="#000"
                        android:gravity="center"/>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="32sp"
                    android:textColor="#000"
                    android:text="人工控制"
                    android:layout_marginTop="35dp"/>

                <Button
                    android:id="@+id/wdlk_heng_xiang"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="32sp"
                    android:textColor="#000"
                    android:text="横向"
                    android:layout_marginTop="30dp"/>

                <Button
                    android:id="@+id/wdlk_zhong_xiang"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="32sp"
                    android:textColor="#000"
                    android:text="纵向"
                    android:layout_marginTop="20dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>